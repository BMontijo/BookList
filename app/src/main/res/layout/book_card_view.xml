<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/card_title_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Title"/>

    <TextView
        android:id="@+id/card_author_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/card_title_text_view"
        tools:layout_editor_absoluteX="0dp"
        tools:text="Author" />

    <TextView
        android:id="@+id/card_year_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/card_author_text_view"
        tools:layout_editor_absoluteX="0dp"
        tools:text="2018" />
</android.support.constraint.ConstraintLayout>